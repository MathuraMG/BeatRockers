<div class="container text-center beatbox_login">
<%= form_tag '/login' do %>
  <br/>
<div>
  <img src="<%= asset_path('Logo.png') %>" width="200px" height="100%" alt ="Cinque Terre">
</div>
  <!--<span class="beatbox_label_field">Email :</span>-->
  <br/><br/>
  <%= text_field_tag :email, nil, placeholder: "Enter your email", :class => "beatbox_textfield_properties" %>
  <br/>
  <!--<span class="beatbox_label_field text-left">Password :</span>-->
  <br/>
  <%= password_field_tag :password, nil, placeholder: "Enter your password", :class => "beatbox_textfield_properties" %>
  <br/><br/><br/>
  <%= submit_tag "Log In", :class => "beatbox_button" %> <br/><br/>
  <%= submit_tag "Sign Up", :class => "beatbox_button" %>
<% end %>
</div>


