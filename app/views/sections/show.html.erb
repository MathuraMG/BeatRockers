<div class="beatbox_header_ul">
    <nav>
        <ul title="view options">
            <li style="width:15%">
                <%= link_to sections_path do%>
                <img src="<%= asset_path('arrowGrey.png') %>" alt="Lessons" height="30" width="30">
                <% end %>
            </li>
            <li style="width:70%">
                <br/>
                <h4 class="text-center" style="color:#8A8A8A;"><%= @section.name %></h4>
            </li>
            <li style="width:15%">
                <br/>
                <%= link_to 'Edit', edit_section_path(@section) %>
            </li>
        </ul>
    </nav>
</div>
<div class="container topPadding">
    <p id="notice"><%= notice %></p>
    <p>
        <% @section.students.each do |student| %>
        <br/>
        <ul title="student" class="classes_list">
            <li>
                <%=link_to @students.find(student).name,  @students.find(student) %>
            </li>
            <br/><br/>
        </ul>
        <% end %>
    </p>

    <strong class="beatbox_label_field">Comments:</strong>

    <% @comments.each do |comment| %>
    <ul>
        <li>
            <h5><%= comment.comments_text %>
                <i><%= @users.find(comment.user_ids[0]).name %><%= comment.created_at %>
                </i>
            </h5>
        </li>
    </ul>
    <% end %>

    <%= simple_form_for(@comment) do |f| %>
    <%= f.error_notification %>
    <br/>
    <div class="form-inputs">
        <%= f.input :comments_text, label: false %>
    </div>

    <%=f.hidden_field :section_id, :value => @section.id %>

    <br/>
    <div class="text-center">
        <%= f.button :submit, :class => "beatbox_button" %>
    </div>
    <% end %>

</div>
