<div class="container text-center">
<br>
<p id="notice"><%= notice %></p>

<div class="container">

  <ul title = "tags available" class="tag-list">
    <% @tags.each do |tag| %>
      <input type="checkbox" name="chk_group" value="<%= tag.name %>"/><%= tag.name %>
    <% end %>
  </ul>
  <h1>Lessons</h1>
  <ul title ="lessons">

    <% @lessons.each do |lesson| %>

      <li class="lesson">
        <%= link_to lesson  do%>
        <p><%= lesson.name %></p>
          <% lesson.tags.each do |tag| %>
            <%= @tags.find(tag).name %>
          <% end %>
        <% end %>
      </li>

    <% end %>
  </ul>

<button type="button" class="btn btn-default"><%= link_to 'New Lesson', new_lesson_path %></button>
</div>
